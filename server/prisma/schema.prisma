datasource db {
  provider = "postgresql"
  url      = "postgresql://sampo@localhost:5432/kloud_muzika"
}

generator client {
  provider = "prisma-client-js"
}

model Post {
  id        Int     @default(autoincrement()) @id
  title     String
  content   String?
  published Boolean @default(false)
  author    User?   @relation(references: [id])
}

model User {
  id    Int     @default(autoincrement()) @id
  email String  @unique
  name  String?
  posts Post[]
}

model TrackMetadata {
  id                 Int    @default(autoincrement()) @id
  track              Track
  original_file_path String
  direct_link        String
}

model Track {
  id       Int            @default(autoincrement()) @id
  title    String
  fileId   String?        @unique
  artist   Artist         @relation(references: [id])
  metadata TrackMetadata? @relation(references: [id])
}

model Artist {
  id      Int     @default(autoincrement()) @id
  name    String  @unique
  country String?
  tracks  Track[]
}

model Album {
  id           Int     @default(autoincrement()) @id
  name         String
  release_date String?
}