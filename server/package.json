{
  "name": "typescript-graphql",
  "scripts": {
    "start": "node dist/server",
    "clean": "rm -rf dist",
    "build": "yarn clean && yarn generate && tsc",
    "generate": "yarn generate:prisma && yarn generate:nexus",
    "generate:prisma": "yarn prisma generate",
    "generate:nexus": "ts-node --transpile-only src/schema.ts",
    "migrate": "yarn prisma migrate dev",
    "postinstall": "yarn generate",
    "dev": "ts-node-dev --no-notify --respawn --transpileOnly src/server"
  },
  "dependencies": {
    "@koa/cors": "2",
    "@prisma/client": "^2.19.0",
    "@types/isomorphic-fetch": "^0.0.35",
    "@types/koa-router": "^7.4.0",
    "@types/node-fetch": "^2.5.5",
    "@types/websocket": "^1.0.0",
    "apollo-server": "2.11.0",
    "apollo-server-koa": "^2.11.0",
    "dotenv": "^8.2.0",
    "dropbox": "^4.0.30",
    "es6-promise": "^4.2.8",
    "googleapis": "39",
    "graphql": "^15.4.0",
    "graphql-scalars": "^1.7.0",
    "graphql-tag": "^2.10.3",
    "isomorphic-fetch": "^2.2.1",
    "koa-router": "^8.0.8",
    "nexus": "^1.0.0",
    "nexus-prisma": "^0.25.0",
    "prettier": "^1.19.1",
    "websocket": "^1.0.31"
  },
  "devDependencies": {
    "@types/node": "12.12.30",
    "@typescript-eslint/eslint-plugin": "^4.20.0",
    "@typescript-eslint/parser": "^4.20.0",
    "chalk": "^4.0.0",
    "nexus-plugin-prisma": "^0.33.0",
    "prisma": "^2.20.1",
    "ts-node": "8.7.0",
    "ts-node-dev": "1.0.0-pre.44",
    "typescript": "^4.2.3"
  },
  "prettier": {
    "singleQuote": true,
    "semi": false,
    "trailingComma": "all"
  },
  "engines": {
    "node": "14"
  }
}
